{
	"license"           : "MIT",
	"name"              : "clevercanyon/php-chalk",
	"description"       : "A tool to style terminal output using PHP.",
	"authors"           : [
		{
			"name"     : "Martin Pettersson",
			"email"    : "martin_pettersson@outlook.com",
			"homepage" : "http://martindotcom.se",
			"role"     : "Developer"
		},
		{
			"name"     : "CLEVER CANYON",
			"homepage" : "https://clevercanyon.com",
			"role"     : "organization"
		}
	],
	"prefer-stable"     : true,
	"minimum-stability" : "dev",
	"config"            : {
		"platform"      : {
			"php-64bit" : "7.4.0"
		},
		"allow-plugins" : {
			"dealerdirect/phpcodesniffer-composer-installer" : true,
			"composer/package-versions-deprecated"           : true
		}
	},
	"require"           : {
		"php-64bit" : "^7.4 || ^8.0 || ^8.1"
	},
	"autoload"          : {
		"psr-4" : {
			"Clever_Canyon\\Chalk\\" : "./src/classes"
		}
	}
}
