{
	"license"           : "MIT",
	"name"              : "clevercanyon/php-chalk",
	"description"       : "A tool to style terminal output using PHP.",
	"authors"           : [
		{
			"name"     : "Martin Pettersson",
			"email"    : "martin_pettersson@outlook.com",
			"homepage" : "http://martindotcom.se",
			"role"     : "Developer"
		},
		{
			"name"     : "CLEVER CANYON",
			"homepage" : "https://clevercanyon.com",
			"role"     : "organization"
		}
	],
	"prefer-stable"     : true,
	"minimum-stability" : "dev",
	"config"            : {
		"process-timeout"     : 0,
		"optimize-autoloader" : true
	},
	"require"           : {
		"php" : "^7.4 || ^8.0"
	},
	"autoload"          : {
		"psr-4" : {
			"Clever_Canyon\\Chalk\\" : "./src/classes"
		}
	},
	"require-dev"       : {
		"clevercanyon/php-js-utilities-dev" : "dev-main"
	},
	"autoload-dev"      : {
		"psr-4" : {
			"Clever_Canyon\\Chalk__Tests\\" : "./tests/classes"
		}
	},
	"scripts"           : {
		"post-update-cmd"   : [
			"[ $COMPOSER_DEV_MODE -eq 0 ] || ./vendor/clevercanyon/php-js-utilities-dev/src/toolchain/composer/post-update-cmd.php"
		],
		"run-project-tests" : [
			"XDEBUG_MODE=coverage phpunit --configuration ./.phpunit.xml --testsuite tests"
		]
	},
	"extra"             : {
		"clevercanyon" : {
			"@extends-packages" : [ "clevercanyon/php-js-utilities-dev" ]
		}
	}
}
